    <section class="upload">
        <h2>Upload Image</h2>
        <form onsubmit="return validateForm()">
            <input type="file" id="file" name="file" accept="image/*" onchange="showPreview()" />
            <input type="button" class="analyze-btn" value="Analyze" onclick="analyze()" />
        </form>
    </section>

    <section class="preview-box" id="preview-box">
